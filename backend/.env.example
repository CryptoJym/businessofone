# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Email Configuration
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=hello@businessofone.ai
EMAIL_FROM_NAME=Business of One
EMAIL_REPLY_TO=support@businessofone.ai

# SendGrid Specific (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# AWS SES Specific (if using SES)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Database Configuration (for storing email logs, subscriptions)
DATABASE_URL=postgresql://user:password@localhost:5432/businessofone

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100