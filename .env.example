# Application Environment
NODE_ENV=development

# Application URLs
APP_URL=http://localhost:3000/health
METRICS_URL=http://localhost:3000/metrics

# Logging Configuration
LOG_LEVEL=info

# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Release Version
RELEASE_VERSION=1.0.0

# Monitoring Ports
METRICS_PORT=9090
HEALTH_CHECK_PORT=3001

# APM Configuration (optional)
ELASTIC_APM_SERVICE_NAME=businessofone
ELASTIC_APM_SERVER_URL=http://localhost:8200
ELASTIC_APM_SECRET_TOKEN=your-apm-token

# StatsD Configuration (optional)
STATSD_HOST=localhost
STATSD_PORT=8125